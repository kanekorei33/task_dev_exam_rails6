<% num = 0 %>
<% if @rent_house.stations.any? %>
  <% @stations.each do |station| %>

    <h3>最寄り駅<%= num += 1 %></h3>

    路線名 <%= station.route_name %><br>

    駅名 <%= station.station_name %><br>

    徒歩分数 <%= station.on_foot %>分<br>

  <% end %>
<% end %>
