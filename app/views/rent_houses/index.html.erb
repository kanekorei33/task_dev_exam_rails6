<p id="notice"><%= notice %></p>

<h1>Rent Houses</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rent_houses.each do |rent_house| %>
      <tr>
        <td><%= rent_house.house_name %></td>
        <td><%= rent_house.rent %>円</td>
        <td><%= rent_house.address %></td>
        <td><%= rent_house.age %>年</td>
        <td><%= rent_house.remaks %></td>
        <td><%= link_to '詳細', rent_house %></td>
        <td><%= link_to '編集', edit_rent_house_path(rent_house) %></td>
        <td><%= link_to '消去', rent_house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

